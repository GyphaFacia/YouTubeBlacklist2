{
	"name" : "YouTube Blacklist",
	"description" : "Remove unacceptable channels from your search list",
	"version" : "1.0",
	"manifest_version": 2,
	"icons" : {
		"128": "icons/ico128.png",
		"48": "icons/ico48.png",
		"16": "icons/ico16.png"
	},

	"permissions": [
		"storage",
		"tabs", 
		"<all_urls>"
	],
	
	"web_accessible_resources": [
		"icons/*.svg",
		"icons/*.png"
	],
	
	"content_scripts":[
		{
			"matches" : ["https://www.youtube.com/*"],
			"js": [
				"Suggestions.js",
				"Parsing.js",
				"ExtensionElements.js",
				"script.js"
			],
			"run_at" : "document_idle"
		},
		{
			"matches" : ["https://www.youtube.com/*"],
			"css": ["style.min.css"]
		}
	]

}